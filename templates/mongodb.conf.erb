### File managed with puppet ###
### Served by:        '<%= scope.lookupvar('::servername') %>'
### Module:           '<%= scope.to_hash['module_name'] %>'
### Template source:  '<%= template_source %>'

<LoadPlugin python>
    Globals true
</LoadPlugin>

<Plugin python>
    # mongodb.py is at path /usr/local/collectd-plugins/mongodb.py
    ModulePath '/usr/local/collectd-plugins/'

    Import 'mongodb'
    <Module mongodb>
        Host "<%= @mongod_bind_ip %>"
        Database <%- @mongod_dbs.each do |db| -%> "<%= db %>" <%- end %>
    </Module>
</Plugin>
