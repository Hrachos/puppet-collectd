<LoadPlugin python>
    Globals true
</LoadPlugin>

<Plugin python>
    # mongodb.py is at path /opt/collectd-plugins/mongodb.py
    ModulePath "/opt/collectd-plugins/"

    Import "mongodb"
    <Module mongodb>
        Host "<%= @mongod_bind_ip %>"
        <% @mongod_dbs.each |db| %> 
        Database <%= puts "\"db\"" %>
        <% end %>
    </Module>
</Plugin>
